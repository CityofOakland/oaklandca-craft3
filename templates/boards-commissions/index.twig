{% extends '_layouts/_instant-search-index' %}

{% set entry = craft.entries.section('boardsCommissionsIndex').one %}

{% set facets = [
  {
    container: 'boardsCommissions',
    attribute: 'boardsCommissions',
    header: 'Boards & Commissions'
  },
  {
    container: 'departments',
    attribute: 'departments',
    header: 'Departments'
  },
  {
    container: 'projects',
    attribute: 'projects',
    header: 'Projects'
  },

] %}

{% js at head %}
var algoliaIndex = 'production_boards';
var searchInputText = "Search for a specific Board. E.g., “Public Ethics”";
var facetFilters = [
  {% for facet in facets %}
  {
    container: '#{{ facet.container }}',
    attribute: '{{ facet.attribute }}',
    header: '{{ facet.header }}'
  },
  {% endfor %}
];
{% endjs %}