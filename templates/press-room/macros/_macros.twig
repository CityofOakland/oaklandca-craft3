{% macro leftTextRightImage(heading, text, link, linkText, image, imageRatio) %}
  {% set link, linkText, image, imageRatio = link ?? "https://www.google.com", linkText ?? "Learn more", image ?? "https://placeimg.com/768/480/any/1", imageRatio ?? "4/3" %}
  <section class="bg-rotate">
    <div class="container">
      {% include '_partials/_elements/_module-header.twig' with {
        headerText: heading,
      } %}
      <div class="flex flex-col-reverse md:flex-row">
        <div class="md:w-1/2 lg:w-2/3">
          {{ text | raw }}
          {% include "_partials/_elements/_module-readmore.twig" with {
            linkUrl: link,
            linkText: linkText
          } %}
        </div>
        <figure class="md:w-1/2 md:pl-6 lg:w-1/3 lg:pl-8">
          <img class="block" src="{{ image }}" alt="">
        </figure>
      </div>
    </div>
  </section>
{% endmacro %}

{% macro horizontalCard(leftSide, image, imageRatio, date, headline, desc) %}
  {% set side = leftSide ? "r" : "l" %}
  <div class="md:flex lg:w-1/2 lg:m{{ side }}-6 mb-8 lg:mb-0">
    <div class="w-full md:w-1/2 md:pr-4">
      <figure class="aspect-ratio-box aspect-ratio-{{ imageRatio ?? "4/3"}} w-full">
        <img src="{{ image ?? "https://placeimg.com/800/600/any/4" }}" alt="" class="aspect-ratio object-cover">
      </figure>
    </div>
    <div class="md:w-1/2 md:pl-4">
      <div class="text-base text-gray-700 my-3 md:mt-0">{{ date ?? "Jan 28, 2019"}}</div>
      <h3 class="text-lg md:text-xxl my-0">
        <a href="#">{{ headline ?? "Three Line Max Headline About Award" }}</a>
      </h3>
      <p class="text-gray-500 my-4">
        {{ desc ?? "Description of the award. Two lines maximum." }}
      </p>
    </div>
  </div>
{% endmacro %}
