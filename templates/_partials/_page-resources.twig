{% if entry.pageResources | length %}
  <section class="bg-rotate">
    <a id="page-resources" class="anchor-link"></a>
    <div class="container mx-auto p-8 py-16">
      {% include '_partials/_elements/_module-header' with {
        headerText: headerText ?? "Featured Resources",
        linkText: linkText ?? "All Resources",
        linkUrl: linkUrl ?? "/resources/" ~ entry.type
      } %}
      <div class="card-grid grid-equal-height mt-8">
        {% for entry in entry.pageResources.all() %}
          {% include '_partials/_elements/_title-cards' %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
