{% set defaultButtonUrl = "/projects/related-to/"  ~ entry.section.handle ~ "/" ~ entry.slug %}
{% if entry.pageProjects | length %}
  <section class="mb-16">
  <a class="anchor-link" id="page-projects"></a>
    {% include '_partials/_elements/_module-header.twig' with {
      headerText: pageProjectsHeaderText ?? "Projects",
    } %}
    <div class="card-grid wide-cards mt-8">
      {% for entry in entry.pageProjects.all() %}
        {% include '_partials/_elements/_title-cards.twig' %}
      {% endfor %}
    </div>
    {% include "_partials/_elements/_module-readmore.twig" with {
      linkText: pageProjectsLinkText ?? "Related Projects",
      linkUrl: pageProjectsLinkUrl ?? defaultButtonUrl
    } %}
  </section>
{% endif %}
