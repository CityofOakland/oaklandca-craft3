{% if entry.pageProjects | length %}
  <section class="bg-rotate">
    <a id="page-projects" class="anchor-link"></a>
    <div class="container mx-auto p-8">
      {% include '_partials/_elements/_module-header' with {
        "headerText": "Projects",
        "linkText": "All Projects",
        "linkUrl": "/projects"
      } %}
      <div class="card-grid vertical-cards mt-8">
        {% for entry in entry.pageProjects.all() %}
          {% include '_partials/_elements/_title-cards' %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
