{% set defaultButtonUrl = "/services/related-to/"  ~ entry.section.handle ~ "/" ~ entry.slug %}
{% if entry.pageServices | length %}
  <section class="mb-16">
    <a id="page-services" class="anchor-link"></a>
    {% include '_partials/_elements/_module-header.twig' with {
      headerText: pageServicesHeaderText ?? "Featured Services",
    } %}
    <div class="card-grid grid-equal-height mt-8">
      {% for entry in entry.pageServices.all() %}
        {% include '_partials/_elements/_title-cards.twig' %}
      {% endfor %}
    </div>
    {% include "_partials/_elements/_module-readmore.twig" with {
      linkText: pageServicesLinkText ?? "Related Services",
      linkUrl: pageServicesLinkUrl ?? defaultButtonUrl
    } %}
  </section>
{% endif %}
