<div class="banner leading-normal">
  <div class="container mx-auto px-8">
  {% include '_partials/_elements/_breadcrumbs' with {
    title: entry.title,
    colorScheme: 'light',
    links: [
      {
        title: 'Departments',
        link: '/departments'
      }
    ]
  } %}
