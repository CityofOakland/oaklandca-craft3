  ['/topics/civil-rights-access', '民權政策與程序'],
  ['/services/apply-for-city-of-oakland-and-port-of-oakland-jobs', 'City Jobs']
] %}
<footer class="bg-deep-green bg-transparent-oakland-roots leading-loose text-base relative text-bright-green overflow-hidden">
  <div class="container relative z-20">
    <div class="sm:flex flex-wrap">
      <div class="sm:flex-1 my-4">
        <ul class="my-0 col-count-2 md:col-count-3">
          {% for navItem in footerNav %}
            <li><a class="text-white hover:text-white hover:underline" href="{{ navItem[0] }}">{{ navItem[1] }}</a></li>
          {% endfor %}
        </ul>
      </div>
      <div class="my-4 sm:w-1/4 leading-normal text-white">
        <div class="mb-4">
          <b>For Maintenance Requests</b><br>
          311 or
          <a class="text-white hover:text-white hover:underline" href="tel:510-615-5566">510-615-5566</a><br>
          Relay Service 711
        </div>
        <div class="mb-4">
          <b>Whistleblower Report</b><br>
          <a class="text-white hover:text-white hover:underline" href="tel:1-888-329-6390">1-888-329-6390</a>
        </div>
        <div>
          <b>Oakland City Hall</b><br>
          1 Frank H. Ogawa Plaza<br>
          Oakland, CA 94612
        </div>
      </div>
    </div>
    <div class="sm:flex flex-wrap mt-4 pt-4 border-t border-white-2">
      <div class="sm:w-1/3">
      </div>
      <div class="sm:w-1/3 flex items-center justify-around">
        <a href="{{ seomatic.site.sameAsLinks.facebook.url }}" class="block rounded-full h-12 w-12 flex items-center justify-center bg-white hover:bg-bright-green fill-current trans-fast text-shark hover:text-shark">
          {{ craft.inlin.er('/assets/img/logo-facebook.svg') | replace('<svg ', '<svg class="h-6" ') | raw }}
          <span class="hidden-visually">Oakland Facebook Page</span>
        </a>
        <a href="{{ seomatic.site.sameAsLinks.twitter.url }}" class="block rounded-full h-12 w-12 flex items-center justify-center bg-white hover:bg-bright-green fill-current trans-fast text-shark hover:text-shark">
          {{ craft.inlin.er('/assets/img/logo-twitter.svg') | replace('<svg ', '<svg class="h-6" ') | raw }}
          <span class="hidden-visually">Oakland Twitter Page</span>
        </a>
        <a href="{{ seomatic.site.sameAsLinks.instagram.url }}" class="block rounded-full h-12 w-12 flex items-center justify-center bg-white hover:bg-bright-green fill-current trans-fast text-shark hover:text-shark">
          {{ craft.inlin.er('/assets/img/logo-instagram.svg') | replace('<svg ', '<svg class="h-6" ') | raw }}
          <span class="hidden-visually">Oakland Instagram Page</span>
        </a>
        <a href="{{ seomatic.site.sameAsLinks.medium.url }}" class="block rounded-full h-12 w-12 flex items-center justify-center bg-white hover:bg-bright-green fill-current trans-fast text-shark hover:text-shark">
          {{ craft.inlin.er('/assets/img/logo-medium.svg') | replace('<svg ', '<svg class="h-6" ') | raw }}
          <span class="hidden-visually">Oakland Medium Page</span>
        </a>
      </div>
      <div class="sm:w-1/3 flex justify-end items-center text-sm text-white">
        ©
        {{ now.date | date('Y') }}
        City of Oakland
      </div>
    </div>
  </div>
</footer>
