{% set colorPalette = {
  'light': {
    'linkColor': 'cararra',
    'barColor': 'white',
  },
  'dark': {
    'linkColor': 'astronaut',
    'barColor': 'shark',
  },
} %}
{% set links = links ?? '' %}

{% set colors = colorPalette[breadCrumbColorScheme] %}
{% set linkColor = colors.linkColor %}
{% set barColor = colors.barColor %}

<div class="container mx-auto relative z-10 text-sm pt-4 pb-3 pl-8 border-{{ barColor }} border-l-2 text-{{ barColor }}">
  <a class="text-{{ linkColor }} hover:text-{{ barColor }} hover:underline" href="/">Oakland</a> →
  {% for link in links if links is defined %}
    <a class="text-{{ linkColor }} hover:text-{{ barColor }} hover:underline" href="{{ link.link }}">{{ link.title }}</a> →
  {% endfor %}
  <span class="font-bold">{{ title }}</span>
</div>
