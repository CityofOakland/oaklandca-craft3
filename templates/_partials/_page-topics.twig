{% set defaultButtonUrl = "/topics/related-to/"  ~ entry.section.handle ~ "/" ~ entry.slug %}
{% if entry.pageTopics | length %}
  <section class="bg-rotate">
    <a class="anchor-link" id="page-topics"></a>
    <div class="container p-8 py-16">
      {% include '_partials/_elements/_module-header.twig' with {
        headerText: pageTopicsHeaderText ?? "Topics",
      } %}
      <div class="card-grid vertical-cards mt-8">
        {% for entry in entry.pageTopics.all() %}
          {% include '_partials/_elements/_title-cards.twig' %}
        {% endfor %}
      </div>
      {% include "_partials/_elements/_module-readmore.twig" with {
        linkText: pageTopicsLinkText ?? "Related Topics",
        linkUrl: pageTopicsLinkUrl ?? defaultButtonUrl
      } %}
    </div>
  </section>
{% endif %}
