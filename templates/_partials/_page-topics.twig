{% if entry.pageTopics | length %}
  <section class="bg-rotate">
    <a id="page-topics" class="anchor-link"></a>
    <div class="container mx-auto p-8 py-16">
      {% include '_partials/_elements/_module-header' with {
        headerText: pageTopicsHeaderText ?? "Topics",
        linkText: pageTopicsLinkText ?? "Related Topics",
        linkUrl: pageTopicsLinkUrl ?? "/topics/related-to/" ~ entry.slug
      } %}
      <div class="card-grid vertical-cards mt-8">
        {% for entry in entry.pageTopics.all() %}
          {% include '_partials/_elements/_title-cards' %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
