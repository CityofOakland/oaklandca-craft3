{% extends '_layout' %}

{% block content %}
  {% include '_partials/_page-banners' %}

  {# Begin Departments #}
  <section class="bg-white relative z-0">
    <div class="container">
      {% set departmentsGrouped = craft.entries.section('departments').officialDepartment(true).order('title').all() | group('title | first') %}

      {% for letter, entries in departmentsGrouped %}
        <div class="pt-12 mb-12 border-light-grey border-t">
          <h2 class="mt-0 leading-none font-semibold text-lg">{{ letter | upper }}</h2>
          {% spaceless %}            
          {% for entry in entries %}
            <div class="shadow-btn p-6 my-2 rounded-sm">
              <h3 class="font-body text-lg mt-0 mb-4"><a href="{{ entry.url }}">{{ entry.title }}</a></h3>
              <p class="my-0 max-w-md">{{ entry.leadIn | chop(limit=200, unit='c', append='â€¦') }}</p>
            </div>
          {% endfor %}
          {% endspaceless %}
        </div>
      {% endfor %}
    </div>
  </section>
  {# End Departments #}
{% endblock %}
