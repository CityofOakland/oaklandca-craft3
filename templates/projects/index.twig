{% extends '_layouts/_instant-search-index' %}

{% set entry = craft.entries.section('projectsIndex').one %}

{% set facets = [
  {
    container: 'boardsCommissions',
    attribute: 'boardsCommissions',
    header: 'Boards & Commissions'
  },
  {
    container: 'departments',
    attribute: 'departments',
    header: 'Departments'
  },
  {
    container: 'projects',
    attribute: 'projects',
    header: 'Projects'
  },

] %}

{% js at head %}
var algoliaIndex = '{{ getenv('ENVIRONMENT') }}_projects';
var searchInputText = "Search for a project topic or title. E.g., “Renovation”";
var facetFilters = [
  {% for facet in facets %}
    {
      container: '#{{ facet.container }}',
      attribute: '{{ facet.attribute }}',
      header: '{{ facet.header }}'
    },
  {% endfor %}
];
{% endjs %}
