{% set link = link ?? "" %}
{% set linkText = linkText ?? "Learn more" %}
{% set image = image ?? "" %}
{% set imageUrl = image.one.url ?? "" %}
{% set altText = image.one.altText ?? "" %}
{% set imageRatio = imageRatio ?? "16/9" %}
<section class="bg-rotate">
  <a class="anchor-link" id="{{ blockId }}"></a>
  <div class="container">
    <div class="flex flex-col-reverse md:flex-row">
      <div class="md:w-1/2 lg:w-2/3 o-4">
        {% include '_partials/_elements/_module-header.twig' with {
          headerText: heading,
        } %}
        {{ text | raw }}
        {% if link %}
          {% include "_partials/_elements/_module-readmore.twig" with {
            linkUrl: link,
            linkText: linkText
          } %}
        {% endif %}
      </div>
      {% if image | length %}
        <div class="md:w-1/2 md:pl-6 lg:w-1/3 lg:pl-8">
          <figure class="aspect-ratio-box aspect-ratio-{{ imageRatio }} w-full">
            <img class="block aspect-ratio object-cover" src="{{ imageUrl }}" alt="{{ altText }}">
          </figure>
        </div>
      {% endif %}
    </div>
  </div>
</section>
