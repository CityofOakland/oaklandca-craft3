{% extends '_layout' %}
{% set pressRelease = entry.pressReleaseFile %}

{% block content %}
  {% include '_partials/_page-banners' with {
    breadCrumbLinks: [
      {
        title: 'News',
        link: '/news'
      }
    ],
  } %}
  <section class="bg-white relative z-0">
    <div class="container md:flex pt-0">
      <div class="md:w-3/4 md:mr-8">
        <h2 class="text-xl">Post Date:
          {{ entry.postDate | date() }}</h3>
        {% if entry.newsImage | length %}
          <figure class="max-w-full mb-8">
            {% set optimizedImages = entry.newsImage.one().newsEntryImage %}
            <img src="{{ optimizedImages.src() }}" alt="{{ entry.newsImage.one().altText ?? ''}}" srcset="{{ optimizedImages.srcset() }}" sizes="100vw"/>
          </figure>
        {% endif %}
        <div class="body-text">
          {{ entry.body }}
        </div>
      </div>
      <div class="md:flex-1">
        {% if entry.mediaContact | length %}
          <h3>Media Contact</h3>
          {{ entry.mediaContact }}
        {% endif %}
        {% if pressRelease.exists() %}
          <a href="{{ pressRelease.one.url }}" class="btn w-full">Download Press Release</a>
        {% endif %}
      </div>
    </div>
  </section>
{% endblock %}
