{% extends '_layout' %}
{% set pressRelease = entry.pressReleaseFile %}

{% block content %}
  {% include '_partials/_page-banners' with {
    bannerImage: entry.newsImage,
    bannerImageBlur: 'large',
    breadCrumbs: true,
    breadCrumbLinks: [
      {
        title: 'News',
        link: '/news'
      }
    ],
  } %}
  <section class="bg-white relative z-0">
    <div class="container mx-auto p-8 py-16 md:flex">
      <div class="md:w-3/4 md:mr-8">
        <h2 class="text-xl">Post Date: {{ entry.postDate | date() }}</h3>
        {% if entry.newsImage | length %}
          <figure class="max-w-full mb-8">
            <img src="{{ entry.newsImage.one.url }}" alt="">
          </figure>
        {% endif %}
        {{ entry.body }}
      </div>
      <div class="md:flex-1">
        {% if entry.mediaContact | length %}
          <h3>Media Contact</h3>
          {{ entry.mediaContact }}
        {% endif %}
        {% if pressRelease.exists() %}
          <a href="{{ pressRelease.one.url }}" class="btn w-full">Download Press Release</a>
        {% endif %}
      </div>
    </div>
  </section>
{% endblock %}
