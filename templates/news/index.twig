{% extends '_layouts/_instant-search-index' %}

{% set entry = craft.entries.section('newsIndex').one %}
{% set algoliaIndex =  'production_news' %}

{% set facets = [
  {
    container: 'boardsCommissions',
    attribute: 'boardsCommissions',
    header: 'Boards & Commissions'
  },
  {
    container: 'departments',
    attribute: 'departments',
    header: 'Departments'
  },
  {
    container: 'officials',
    attribute: 'officials',
    header: 'Officials'
  },
  {
    container: 'projects',
    attribute: 'projects',
    header: 'Projects'
  },
  {
    container: 'topics',
    attribute: 'topics',
    header: 'Topics'
  },

] %}

{% set hitsTemplate =
'<article class="py-8 horizontal-card border-celeste border-b-2">' ~
  '{{#newsImage}}' ~
    '<figure class="bg-white relative z-0">' ~
      '<img src="{{ newsImage }}" class="max-w-full">' ~
    '</figure>' ~
  '{{/newsImage}}' ~
  '{{^newsImage}}' ~
    '<figure class="w-full h-48 sm:h-64 p-4 bg-celeste relative z-0 flex items-center justify-center">' ~
      '<div class="text-camouflage-green opacity-75 fill-current h-full p-12">' ~
        '<img src="/assets/img/icon-newspaper.svg" class="h-full">' ~
      '</div>' ~
    '</figure>' ~
  '{{/newsImage}}' ~
  '<div>' ~
    '<h3 class="text-2xl mt-4 sm:mt-0">' ~
      '<a href="/{{ url }}">' ~
        '{{{_highlightResult.title.value}}}' ~
      '</a>' ~
    '</h3>' ~
    '<div class="text-shark my-4">' ~
      '{{#summary}}' ~
        '{{{_highlightResult.summary.value}}}' ~
      '{{/summary}}' ~
      '{{^summary}}' ~
        '{{{_snippetResult.body.value}}}{{^_snippetResult.body}}…{{/_snippetResult.body}}' ~
      '{{/summary}}' ~
    '</div>' ~
    '<div>' ~
      '<a href="/{{ url }}">Read More »</a>' ~
    '</div>' ~
  '</div>' ~
'</article>'
%}
