{% if currentUser.admin %}
  {% set emptyFiles = craft.entries.section('documents').documentFile(':empty:').all() %}
  {% spaceless %}
  {% set dataRows = [] %}
  {% for entry in emptyFiles %}
    {% set dataRows = dataRows | merge([[entry.title, entry.cpEditUrl, entry.author.username]]) %}
  {% endfor %}
  {% set options = {
      header: ['Entry Title', 'CP URL', 'Author'],
      rows: dataRows
  } %}
  {{ craft.beam.csv(options) }}
  {% endspaceless %}
{% else %}
  {% redirect '/' %}
{% endif %}
