{% extends '_layout' %}

{%- set custSideNav -%}
<figure class="w-48 pr-12 mb-8 md:mb-0 md:w-1/4">
  <img class="w-full h-auto block" src="/assets/img/logo-311.png" alt="Logo for OAK 311">
</figure>
{%- endset -%}

{%- set custHeaderContent -%}
<div class="flex-1 flex flex-col justify-between">
  <div>
    <h1 class="text-xxxl md:text-xxxxl font-bold mb-0">OAK 311</h1>
    <p class="mb-0 max-w-md text-xl">OAK 311 is here to help you with requests for routine maintenance and urgent infrastructure issues.</p>
  </div>
  <div class="md:flex w-full mt-8">
    <div class="mb-4 md:mb-0 md:w-1/2 md:mr-4">
      <a href="https://seeclickfix.com/web_portal/wTMihVsatbiDau5Fw66m6HFD/report/location" class="block card-grid-button py-5 bg-green-300 text-white hover:text-white hover:bg-green-600 shadow-none"><img src="/assets/img/icon-cursor.svg" class="inline h-6 w-auto mr-4">Report Online</a>
    </div>
    <div class="md:w-1/2 md:ml-4">
      <a href="tel:311" class="block card-grid-button py-5 bg-green-300 text-white hover:text-white hover:bg-green-600 shadow-none"><img src="/assets/img/icon-phone.svg" class="inline h-6 w-auto mr-4">Call 311</a>
      <div class="mt-2 text-sm font-bold md:text-base md:font-normal">For urgent issues, call us.</div>
    </div>
  </div>
</div>
{%- endset -%}

{% macro seeClickFixLink(title, id) %}
  <option value="https://seeclickfix.com/web_portal/wTMihVsatbiDau5Fw66m6HFD/report/category/{{ id }}/location">{{ title }}</option>
{% endmacro %}
{% import _self as macro %}

{% set dumping = [
  { "title": "Debris, appliances, etc.", "id": 20978},
  { "title": "Green waste", "id": 20998},
  { "title": "Mattress/boxspring", "id": 20986}
] %}

{% set graffiti = [
  {"title": "Advertising (posters, signs, etc.)","id": 20983},
  {"title": "City building (library, rec center)","id": 20964},
  {"title": "Park","id": 20970},
  {"title": "Street litter container","id": 21005},
  {"title": "Street, street light, traffic signal","id": 20967},
  {"title": "Traffic sign(s)","id": 20982},
  {"title": "Private Property","id": 20958},
  {"title": "OTHER","id": 20977}
] %}

{% set building = [
  { "title": "Alarms", "id": 21007 },
  { "title": "Appliance Issue", "id": 21006 },
  { "title": "Clean / Custodial", "id": 20995 },
  { "title": "Electrical Inside/Outside", "id": 20968 },
  { "title": "Fence", "id": 20992 },
  { "title": "Heating, Ventilation, and Cooling", "id": 20959 },
  { "title": "Key / Lock Management", "id": 20955 },
  { "title": "Painting", "id": 20996 },
  { "title": "Pest", "id": 21000 },
  { "title": "Plumbing", "id": 20973 },
  { "title": "Sign", "id": 20993 },
  { "title": "Structural Issue", "id": 20969 }
] %}

{% block content %}
  {% include '_partials/_page-banners' with {
    breadCrumbLinks: [
      {
        title: 'Services',
        link: '/services'
      }
    ],
    custSideNav: custSideNav,
    custHeaderContent: custHeaderContent
  } %}
  <section class="bg-gray-100">
    <div class="container md:flex">
      <div class="md:w-1/2 md:pr-4 o-override o-4">
        <h2 class="text-xxl">Most Common Requests</h2>
        <ul class="font-bold leading-loose">
          <li>
            <select id="illegalDumping" class="cursor-pointer js-select-nav inline bg-transparent appearance-none rounded-none font-body font-bold text-green-400">
              <option value="">Illegal Dumping</option>
              {% for item in dumping %}
                {{ macro.seeClickFixLink(item.title, item.id) }}
              {% endfor %}
            </select>
          </li>
          <li><a href="https://seeclickfix.com/web_portal/wTMihVsatbiDau5Fw66m6HFD/report/category/20961/location">Potholes</a></li>
          <li>
            <select id="graffiti" class="cursor-pointer js-select-nav inline bg-transparent appearance-none rounded-none font-body font-bold text-green-400">
              <option value="">Graffiti</option>
              {% for item in graffiti %}
                {{ macro.seeClickFixLink(item.title, item.id) }}
              {% endfor %}
            </select>
          </li>
          <li>
            <select id="buildingMaintenance" class="cursor-pointer js-select-nav inline bg-transparent appearance-none rounded-none font-body font-bold text-green-400">
              <option value="" class="px-0">City Building Maintenance</option>
              {% for item in building %}
                {{ macro.seeClickFixLink(item.title, item.id) }}
              {% endfor %}
            </select>
          </li>            
          <li><a href="https://seeclickfix.com/web_portal/wTMihVsatbiDau5Fw66m6HFD/report/category/23975/location">Abandoned Vehicles</a></li>
        </ul>
      </div>
      <div class="md:w-1/2 md:pl-4 o-override o-4">
        <h2 class="text-xxl">Urgent Infrastructure Issues</h2>
        <ul class="font-bold leading-loose">
          <li>Downed sign</li>
          <li>Traffic signal outage</li>
          <li>Flooding</li>
          <li>Sewer overflow</li>
          <li>Fallen trees or branches</li>
        </ul>
      </div>
    </div>
  </section>
  <section class="bg-white">
    <div class="container o-override o-12">
      <h2 class="text-xxl">How It Works</h2>
      <ol class="md:flex flex-row text-center">
        <li class="how-it-works-block">
          <figure class="flex items-center justify-center h-12">
            <img src="/assets/img/icon-report.png" alt="An icon of an inbox with an arrow pointing into it." class="h-auto w-12">
          </figure>
          <h3 class="font-semibold text-base mb-0 md:text-xl">Report</h3>
          <p class="text-sm mt-2 mb-0 md:px-2 md:text-lg lg:px-8">You report the issue by phone, website, app, or email.</p>
        </li>
        <li class="how-it-works-block">
          <figure class="flex items-center justify-center h-12">
            <img src="/assets/img/icon-review.png" alt="An icon of a clipboard with a piece of paper and a magnifying glass over it." class="h-12 w-auto">
          </figure>
          <h3 class="font-semibold text-base mb-0 md:text-xl">Review</h3>
          <p class="text-sm mt-2 mb-0 md:px-2 md:text-lg lg:px-8">We review your request and provide a tracking number.</p>
        </li>
        <li class="how-it-works-block">
          <figure class="flex items-center justify-center h-12">
            <img src="/assets/img/icon-assign.png" alt="An icon of a tree chart." class="h-auto w-12">
          </figure>
          <h3 class="font-semibold text-base mb-0 md:text-xl">Assign</h3>
          <p class="text-sm mt-2 mb-0 md:px-2 md:text-lg lg:px-8">We assign your request to the appropriate work group.</p>
        </li>
        <li class="how-it-works-block">
          <figure class="flex items-center justify-center h-12">
            <img src="/assets/img/icon-report.png" alt="An icon of a wrench and screwdriver crossed over each other in an &OpenCurlyDoubleQuote;X&rdquor; pattern." class="h-auto w-12">
          </figure>
          <h3 class="font-semibold text-base mb-0 md:text-xl">Work</h3>
          <p class="text-sm mt-2 mb-0 md:px-2 md:text-lg lg:px-8">Service is provided. Completion times vary.</p>
        </li>
      </ol>
    </div>
  </section>
  <section class="bg-gray-100">
    <div class="container o-override o-4">
      <h2 class="text-xxl">Get the OAK 311 app on:</h2>
        <div class="card-grid">
          <a href="https://play.google.com/store/apps/details?id=com.seeclickfix.oak311.app" class="border-l-4 border-green-300 card-grid-button py-5 text-green-400 hover:text-white hover:bg-green-600 shadow-btn">Google Play</a>
          <a href="https://apps.apple.com/us/app/oak-311/id1316091489" class="border-l-4 border-green-300 card-grid-button py-5 text-green-400 hover:text-white hover:bg-green-600 shadow-btn">Apple Store</a>
        </div>
    </div>
  </section>
  <section class="bg-white">
    <div class="container o-override o-4">
      <h2 class="text-xxl">View OAK 311 Service Request Information</h2>
        <div class="card-grid">
          <a href="https://app.powerbigov.us/view?r=eyJrIjoiODE1NDg4MGYtMmJjYy00MTc1LWIyMmEtNzhkNDNlMjM0MDZlIiwidCI6Ijk4OWEyMTgwLTZmYmMtNDdmMS04MDMyLTFhOWVlOTY5YzU4ZCJ9" class="border-l-4 border-green-300 card-grid-button py-5 text-green-400 hover:text-white hover:bg-green-600 shadow-btn">Interactive 311 Chart</a>
          <a href="https://seeclickfix.com/web_portal/wTMihVsatbiDau5Fw66m6HFD/issues/map?lat=37.769629187677&lng=-122.22453117370607&max_lat=37.79486412183907&max_lng=-122.18676567077638&min_lat=37.744385638880516&min_lng=-122.26229667663576&zoom=14" class="border-l-4 border-green-300 card-grid-button py-5 text-green-400 hover:text-white hover:bg-green-600 shadow-btn">Service Request Map</a>
          {# <a href="https://data.oaklandnet.com/Infrastructure/Service-requests-received-by-the-Oakland-Call-Cent/quth-gb8e" class="border-l-4 border-green-300 card-grid-button py-5 text-green-400 hover:text-white hover:bg-green-600 shadow-btn">View 311 Data</a> #}
        </div>
    </div>
  </section>
{% endblock %}
